# Windows / Executables / Apps list
ctrl + shift + {w,d,e}
	rofi -show {window,drun,run} -kb-cancel Control_L -theme $HOME/.config/bspwm/Purple.rasi

ctrl + shift + Return
	kitty

# Restart / Quit Bspwm
ctrl + shift + {r,q}
	bspc {wm -r,quit}
	
# Close / Kill Apps
ctrl + shift + {_,shift + } c
	bspc node -{c,k}

# Toggle Fullscreen
ctrl + shift + space
    bspc node -t "~"fullscreen
